BoxLayout:


    MDRaisedButton:
        text: "Open lengthy dialog"
        size_hint: None, None
        size: 3 * dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .8}
        opposite_colors: True
        on_release: root.show_example_long_dialog()

    MDRaisedButton:
        text: "Open input dialog"
        size_hint: None, None
        size: 3 * dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .6}
        opposite_colors: True
        on_release: root.show_example_input_dialog()

    MDRaisedButton:
        text: "Open Alert Dialog"
        size_hint: None, None
        size: 3 * dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .4}
        opposite_colors: True
        on_release: root.show_example_alert_dialog()

    MDRaisedButton:
        text: "Open Ok Cancel Dialog"
        size_hint: None, None
        size: 3 * dp(48), dp(48)
        pos_hint: {'center_x': .5, 'center_y': .2}
        opposite_colors: True
        on_release: root.show_example_ok_cancel_dialog()